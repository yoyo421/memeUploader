{
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "Node",
    "paths": {
      "@api/*": ["@types/*.d.ts"]
    }
  },
  "exclude": ["dist"],
  "include": ["src", "**/*.d.ts"]
}
